<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".gongneng">



    <LinearLayout
            android:orientation="vertical"
            android:background="@mipmap/identify_bc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="蜘识"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#495060"
        android:background="#ffffff" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            >

        </TextView>


        <Button
            android:id="@+id/take_photo"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#495060"
            android:background="@drawable/bg_card_bt_upload"
            android:drawableTop="@mipmap/take_photo"
            android:textSize="14sp"
            android:text="拍照"
            />
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->

<!--            android:text="拍照"-->
<!--            android:layout_gravity="center"-->
<!--            ></TextView>-->
        <Button
            android:id="@+id/xiangce"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/take_photo"
            android:textSize="14sp"
            android:background="@drawable/bg_card_bt_upload"
            android:textColor="#495060"
            android:drawableTop="@mipmap/get_photo"
            android:text="相册"/>
<!--            android:background="@mipmap/get_photo"-->
            />
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="相册"-->
<!--                android:layout_gravity="center"-->
<!--                ></TextView>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                >

            </TextView>
        </LinearLayout>


    </LinearLayout>







    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/sy2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@mipmap/home"></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 首页 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/gn2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/search_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 识别 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="bottom"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/sz2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/profile_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 我的 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".shezhi"
    >
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:paddingLeft="10dp"
                android:background="@drawable/conor_of_bt_back"
                android:id="@+id/button_setting_back"
                android:drawableLeft="@drawable/ic_back"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="设置"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="left"
                android:textColor="#495060"
                android:background="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/cardview_light_background"
                android:drawableLeft="@drawable/ic_gengxin_shuoming"
                android:text="更新说明"
                android:textSize="20sp"
                android:textColor="#495060"
                android:gravity="left"
                />
            <Button
                android:id="@+id/updateversion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_officail"
                android:backgroundTint="@color/cardview_light_background"
                android:text="官方网站（提供版本更新）"
                android:textSize="20sp"
                android:textColor="#495060"
                android:gravity="left"
                />

<!--            <Button-->
<!--                android:id="@+id/tongyong"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:textColor="#495060"-->
<!--                android:backgroundTint="@color/cardview_light_background"-->
<!--                android:text="传输设置"-->
<!--                android:textSize="20sp"-->
<!--                android:gravity="left"-->
<!--                />-->
            <Button
                android:id="@+id/bt_changepassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#495060"
                android:drawableLeft="@drawable/ic_lock"
                android:backgroundTint="@color/cardview_light_background"
                android:text="修改密码"
                android:textSize="20sp"
                android:gravity="left"/>
            <Button
                android:id="@+id/guanyu"
                android:layout_width="match_parent"
                android:textColor="#495060"
                android:drawableLeft="@drawable/ic_guanyu_women"
                android:backgroundTint="@color/cardview_light_background"
                android:layout_height="50dp"
                android:text="关于我们"
                android:textSize="20sp"
                android:gravity="left"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                ></TextView>
            <Button
                android:id="@+id/quit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white2"
                android:text="退出登录"
                android:background="@drawable/bg_card_bt_upload"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                ></TextView>
        </LinearLayout>
    </LinearLayout>





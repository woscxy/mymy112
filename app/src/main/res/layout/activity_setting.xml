<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".shezhi"
    >



    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="设置"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#495060"
            android:background="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/cardview_light_background"
        android:text="更新说明"
        android:textSize="20sp"
        android:textColor="#495060"
        android:gravity="left"
        />
        <Button
            android:id="@+id/updateversion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="@color/cardview_light_background"
            android:text="官方网站（提供版本更新）"
            android:textSize="20sp"
            android:textColor="#495060"
            android:gravity="left"
            />

    <Button
        android:id="@+id/tongyong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#495060"
        android:backgroundTint="@color/cardview_light_background"
        android:text="传输设置"
        android:textSize="20sp"
        android:gravity="left"
        />
        <Button
            android:id="@+id/bt_changepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#495060"
            android:backgroundTint="@color/cardview_light_background"
            android:text="修改密码"
            android:textSize="20sp"
            android:gravity="left"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20sp"
        />
    <Button
        android:id="@+id/guanyu"
        android:layout_width="match_parent"
        android:textColor="#495060"
        android:backgroundTint="@color/cardview_light_background"
        android:layout_height="50dp"
        android:text="关于我们"
        android:textSize="20sp"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            ></TextView>
        <Button
            android:id="@+id/quit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textColor="#495060"
            android:text="退出登录"
            android:background="@drawable/gradient_change"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            ></TextView>
    </LinearLayout>




    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/sy3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/home"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 首页 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/gn3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/search_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 识别 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/sz3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/profile_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 我的 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
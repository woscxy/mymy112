<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity"
    >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fadingEdge="vertical">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="蜘识"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#495060"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@mipmap/first_page" />

<TextView
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffffff"
    android:layout_height="wrap_content"
    android:text="      蜘识是大理大学数学与计算机学院人工智能研究团队利用深度学习技术，基于昆虫生物医药研究院（大理大学）分类图库及用户共建图库开发的蜘蛛识别软件。本版本暂时能识别5种蜘蛛物种，随着分类图库的进一步完善及用户的广泛使用，其识别能力还能不断提升。"
    android:textSize="18dp"
    android:layout_margin="5dp"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffff"
        android:layout_height="wrap_content"
        android:text="    V1.0功能:  "
        android:textSize="18dp"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffff"
        android:layout_height="300dp"
        android:text="    识别蟹蛛、鼠蛛、园蛛、食鸟蛛、络新妇5个物种。"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />
</LinearLayout>
    </ScrollView>


    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/sy1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/home"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 首页 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/gn1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/search_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 识别 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/sz1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/profile_0"
                android:layout_gravity="center"
                >
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 我的 "
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#000000"
                android:layout_gravity="bottom"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/login"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <LinearLayout
        android:background="@drawable/conerofedittext"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="75dp"
            app:contentPadding="0.5dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_person"
                    tools:ignore="VectorDrawableCompat" />

                <EditText
                    android:id="@+id/regUserName"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="#495060"
                    android:background="@drawable/conerofedittext"
                    android:layout_gravity="center"
                    android:hint="注册账号"
                    android:inputType="text"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/conerofedittext"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="75dp"
            app:contentPadding="0.5dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_key"
                    tools:ignore="VectorDrawableCompat" />
                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/regPassWord"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="#495060"
                    android:background="@drawable/conerofedittext"
                    android:textColor="@android:color/black"
                    android:hint="密码"
                    android:inputType="textPassword" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/conerofedittext"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="75dp"
            app:contentPadding="0.5dp">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_key"
                    tools:ignore="VectorDrawableCompat" />
                <EditText
                    android:id="@+id/shenfen"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="#495060"
                    android:background="@drawable/conerofedittext"
                    android:textColor="@android:color/black"
                    android:hint="确认密码"
                    android:inputType="textPassword" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="75dp"
            app:contentPadding="0.5dp">
            <Button
                android:id="@+id/btn_reg"
                android:layout_width="286dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textColor="@color/white2"
                android:text="注册"
                android:textStyle="bold"
                android:background="@drawable/bg_card_bt_upload"
                android:textSize="20sp" />
<!--            <Button-->
<!--                android:id="@+id/btn_reg"-->
<!--                android:layout_width="286dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/bg_card1"-->
<!--                android:text="注册"-->
<!--                android:textSize="20dp"-->
<!--                android:textStyle="bold" />-->

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="7dp"
            android:layout_gravity="right"
            android:id="@+id/textView_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:text="已有账号" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1" />
<!--    <Button-->
<!--        android:text="返回"-->
<!--        android:id="@+id/fanhui"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="10dp"/>-->


</LinearLayout>
